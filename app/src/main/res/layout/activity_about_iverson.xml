<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutIversonActivity">


    <TextView
        android:id="@+id/nameIver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iverson F Ferasan"
        android:textSize="35dp"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@+id/nameIver"
        android:id="@+id/titleIver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BSIT Student"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_below="@+id/titleIver"
        android:layout_marginTop="25dp"
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/iverson_ferasan_img" />


</RelativeLayout>